{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true,
        "jest": true,
        "es6": true
    },
    "parserOptions": {
        "parser": "babel-eslint"
    },
    "extends": ["plugin:vue/recommended", "prettier"],
    "rules": {
        "comma-dangle": [2, "always-multiline"],
        "no-var": "error",
        "camelcase": "off",
        "no-extra-boolean-cast": "off",
        "semi": ["error", "always"],
        "vue/require-prop-types": "off",
        "vue/require-default-prop": "off",
        "vue/no-reserved-keys": "off",
        "vue/prop-name-casing": "off"
    }
}